# ============================================================================
# Configuración de la Aplicación Trading Swing
# ============================================================================
# Copia este archivo a .env y configura tus credenciales

# ----------------------------------------------------------------------------
# Credenciales de Alpaca Markets
# Obtén tus credenciales en: https://app.alpaca.markets/paper/dashboard/overview
# ----------------------------------------------------------------------------
ALPACA_API_KEY=tu_api_key_aqui
ALPACA_SECRET_KEY=tu_secret_key_aqui

# URL de la API de Alpaca
# Paper Trading (recomendado para desarrollo): https://paper-api.alpaca.markets
# Live Trading (producción): https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Auto-trading swing por usuario (usar con extrema precaución)
# false = desactivado (recomendado por defecto)
# true  = el bot puede abrir operaciones swing automáticas basadas en la estrategia
SWING_AUTOTRADE_ENABLED=false

# ----------------------------------------------------------------------------
# Configuración de Flask
# ----------------------------------------------------------------------------
# Clave secreta para sesiones (genera una clave segura en producción)
SECRET_KEY=tu_clave_secreta_segura_aqui

API_MODE=development #production
API_PORT=5080
API_HOST=0.0.0.0
# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# ----------------------------------------------------------------------------
# Configuración de SocketIO
# ----------------------------------------------------------------------------
SOCKETIO_ASYNC_MODE=eventlet #threading
SOCKETIO_PING_TIMEOUT=60
SOCKETIO_PING_INTERVAL=25

# ----------------------------------------------------------------------------
# Límites de Trading
# ----------------------------------------------------------------------------
MIN_ORDER_SIZE=1.0
MAX_ORDER_SIZE=100000.0

# ----------------------------------------------------------------------------
# Configuración de Datos de Mercado
# ----------------------------------------------------------------------------
DEFAULT_TIMEFRAME=1D
DEFAULT_BARS_LIMIT=100

# Límites máximos de barras por tipo de timeframe
MAX_BARS_MIN=390     # intradía 1 sesión aprox.
MAX_BARS_HOUR=400    # suficiente para varios meses en 1H
MAX_BARS_DAY=252     # ~1 año de sesiones

# ----------------------------------------------------------------------------
# Configuración de Base de Datos MongoDB
# ----------------------------------------------------------------------------
MONGO_URI=mongodb://localhost:27017
MONGO_DB=trading_swing

# ----------------------------------------------------------------------------
# Configuración de Seguridad
# ----------------------------------------------------------------------------
# FERNET_KEY: clave usada para cifrar/desencriptar las claves de Alpaca de los usuarios.
# Genera una con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# Minutos de expiración del JWT
JWT_EXPIRES_MIN=60